{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,           // 生成类型声明文件
    "emitDeclarationOnly": true,   // 只生成 .d.ts，不输出 js
    "outDir": "dist"               // 输出目录
  },
  "include": ["src"],              // 只处理 src 文件
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
